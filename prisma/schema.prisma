generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContactForm {
  id                String   @id @default(cuid())
  nombre            String
  negocio           String
  provincia         String
  localidad         String
  cantidad          String
  etapa             String   // etapa original del formulario
  etapaCrm          String   @default("entrante") // etapa del CRM: entrante, primer-llamado, seguimiento, ganado, perdido
  whatsapp          String
  cuit              String   // CUIT obligatorio para filtrar emprendedores curiosos
  email             String?
  comentarios       String?
  notas             String?  // notas del CRM
  valor             Float?   // valor estimado del lead
  esBajoVolumen     Boolean  @default(false) // marca si es un lead de bajo volumen (menos de 24 docenas)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("contact_forms")
}
